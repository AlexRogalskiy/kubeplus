#!/bin/bash

#echo "kubectl connections cr"
#echo "kubectl connections service"
#echo "kubectl connections pod"

if (( $# < 2 )); then
    echo "kubectl connections <Kind> <Instance> <Namespace> [--kubeconfig=<Absolute path to kubeconfig>] [-o json|png] (default value='flat') [--ignore=<Kind1:Instance1,Kind1:Instance1>]"
    exit 0
fi

kind=$1
instance=$2
namespace=$3
output="flat"
kubeconfig=""
ignorelist=""

canonicalKind=`kubectl api-resources | grep -w $kind | awk '{print $4}'`

if [[ $canonicalKind == 'true' ]]; then
  canonicalKind=`kubectl api-resources | grep -w $kind | awk '{print $5}'`
fi

count=0
for k in $canonicalKind
do 
  count=$(( count + 1 ))
done

if [[ $count == 0 ]]; then
  echo "Unknown resource $kind."
  exit 0
fi

if [[ $count > 1 ]]; then
  echo "Ambiguous resource $kind. Found"
  echo $canonicalKind
  exit 0
fi

if [ $# = 7 ]; then
   output=$6 # If output format is passed; use that
   kubeconfig=$4
   ignorelist=$7
fi

# Both specified --kubeconfig and -o 
if [ $# = 6 ] && [[ $4 == "-o" ]]; then
   output=$5 # If output format is passed; use that
   ignorelist=$6
   #kubeconfig=$4
fi

# Only -o specified
if [ $# = 5 ] && [[ $4 == "-o" ]]; then
   output=$5 # If output format is passed; use that
fi

# Only -o specified but no value passed in
if [ $# = 4 ] && [[ $4 == "-o" ]]; then
   echo "Output format not specified."
   exit 0
fi

# Only --kubeconfig specified
if [ $# = 4 ] && [[ $4 == *"kubeconfig="* ]]; then
	kubeconfig=$4
fi

# Only --ignore specified
if [ $# = 4 ] && [[ $4 == *"ignore="* ]]; then
  ignorelist=$4
fi



if [[ "$OSTYPE" == "darwin"* ]]; then
    if [[ "$output" == "png" ]]; then
      /$KUBEPLUS_HOME/plugins/kubediscovery-macos connections $canonicalKind $instance $namespace -o json $kubeconfig $ignorelist > "$KUBEPLUS_HOME/plugins/connections-op.json"
      docker run -v /$KUBEPLUS_HOME/plugins:/root gcr.io/cloudark-kubeplus/grapher:1.1 connections-op.json /root/
      echo "Output available in: $KUBEPLUS_HOME/plugins/connections-op.json.gv.png"
    else
      /$KUBEPLUS_HOME/plugins/kubediscovery-macos connections $canonicalKind $instance $namespace -o $output $kubeconfig $ignorelist
    fi
elif [[ "$OSTYPE" == "linux-gnu"* ]]; then
    if [[ "$output" == "png" ]]; then
      /$KUBEPLUS_HOME/plugins/kubediscovery-linux connections $kind $instance $namespace -o json $kubeconfig $ignorelist > "$KUBEPLUS_HOME/plugins/connections-op.json"
      docker run -v /$KUBEPLUS_HOME/plugins:/root gcr.io/cloudark-kubeplus/grapher:1.1 connections-op.json /root/
      echo "Output available in: $KUBEPLUS_HOME/plugins/connections-op.json.gv.png"
    else
      /$KUBEPLUS_HOME/plugins/kubediscovery-linux connections $kind $instance $namespace -o $output $kubeconfig $ignorelist
    fi
else
    echo "$OSTYPE not supported."
fi
