#!/bin/bash

echo "::KubePlus kubectl commands::"
echo "---"
echo "1. kubectl man cr - Show Man page information about a Custom Resource"
echo "---"
echo "2. kubectl composition - Show composition tree of a Custom Resource instance"
echo "---"
echo "3. kubectl connections cr - Show relationships of a Custom Resource instance"
echo "4. kubectl connections service - Show relationships of a Service instance "
echo "5. kubectl connections pod - Show relationships of a Pod"
echo "---"
echo "6. kubectl metrics cr - Get CPU/Memory/Storage consumption of a Custom Resource instance"
echo "7. kubectl metrics service - Get CPU/Memory/Storage consumption of all the Pods reachable from a Service instance"
echo "8. kubectl metrics account - Get CPU/Memory/Storage consumption of all the Pods that belong to a account"
echo "9. kubectl metrics helmrelease - Get CPU/Memory/Storyage consumption of all the Pods that are part of a Helm release"
echo "---"
echo "10. kubectl grouplogs cr composition - Get logs of all the Pod/containers of a Custom Resource instance"
echo "11. kubectl grouplogs cr connections - Get logs of all the Pod/containers that are related to a Custom Resource instance"
echo "12. kubectl grouplogs service - Get logs of all the Pods/containers that are related to a Service instance"
echo "13. kubectl grouplogs helmrelease - Get logs of all the Pods/containers that are part of a Helm release"
echo "---"
